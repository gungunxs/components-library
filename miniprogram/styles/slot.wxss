/* 
  针对组件内插槽的样式 与组件插槽关联使用
 */

/* photo插槽 用于DYWH的excard和qacard*/
.photo {
  display: flex;
  align-items: center;
  gap: 20rpx;
  align-self: stretch;
}

/* label插槽 用于DYWH的excard和qacard*/
.label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  align-self: stretch;
}


.tabs {
  display: flex;
  flex-direction: row;
  width: 660rpx;
  overflow-x: auto;
  align-items: center;
  padding: 0 8rpx;
  flex-shrink: 0;
}

textarea{
  display: flex;
  padding: 28rpx 48rpx;
  color:var(--Foreground-High);
  width:-webkit-fill-available;
}