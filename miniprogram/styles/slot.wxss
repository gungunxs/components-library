/* 
  针对组件内插槽的样式 与组件插槽关联使用
 */

/* photo插槽 用于DYWH的excard和qacard*/
.photo {
  display: flex;
  align-items: center;
  gap: 20rpx;
  align-self: stretch;
}

/* label插槽 用于DYWH的excard和qacard*/
.label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  align-self: stretch;
}


.tabs {
  display: flex;
  flex-direction: row;
  width: 660rpx;
  overflow-x: auto;
  align-items: center;
  padding: 0 8rpx;
  flex-shrink: 0;
}

textarea{
  display: flex;
  padding: 28rpx 48rpx;
  color:var(--Foreground-High);
  width:-webkit-fill-available;
}

input {
  /* color: var(--Foreground-High); */
  font-family: PingFang SC;
  font-size: 28rpx;
  font-style: normal;
  font-weight: 400;
  line-height: 40rpx;
  /* 142.857% */
  letter-spacing: 0.4rpx;
}
.placeholder{
  color: var(--Foreground-Low);
  font-family: PingFang SC;
  font-size: 28rpx;
  font-style: normal;
  font-weight: 400;
  line-height: 40rpx;
  /* 142.857% */
  letter-spacing: 0.4rpx;
}
.gap8 {
  gap:16rpx
}

.ellipsis-1 {
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 1;
text-overflow: ellipsis;
overflow: hidden;
}