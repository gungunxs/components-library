/* photo插槽 */
.photo {
  display: flex;
  align-items: center;
  gap: 20rpx;
  align-self: stretch;
}

/* label插槽 */
.label {
  display: flex;
  align-items: center;
  gap: 12rpx;
  align-self: stretch;
}

.fill {
  width: 100%;
}
.fill-available {
  width: -webkit-fill-available;
}

.button-group-padding {
  padding: 40rpx 0rpx;
}

.button-group-vertical {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 32rpx;
  align-self: stretch;
}

.button-group-horizen {
  display: flex;
  align-items: center;
  gap: 28rpx;
  align-self: stretch;
}

.tabs {
  display: flex;
  flex-direction: row;
  width: 660rpx;
  overflow-x: auto;
  align-items: center;
  padding: 0 8rpx;
  flex-shrink: 0;
}

textarea{
  display: flex;
  padding: 28rpx 48rpx;
  color:var(--Foreground-High);
  width:-webkit-fill-available;
}