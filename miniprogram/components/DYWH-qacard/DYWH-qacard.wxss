/* components/DYWH-qacard/DYWH-qacard.wxss */
@import "../../styles/color.wxss";
@import "../../styles/typography.wxss";
@import "../../styles/shadow.wxss";

.qacard {
  display: flex;
width: 750rpx;
padding: 20rpx 0rpx;
flex-direction: column;
align-items: flex-start;
background: var(--Foreground-White);
}
.qacard-head {
  display: flex;
  padding: 10rpx 52rpx;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  align-self: stretch;
}
.qacard-head-book {
  display: flex;
  padding: 12rpx 20rpx;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  border-radius: 20rpx;
  background: var(--Secondary-Lavender);
}
.qacard-head-book-text {
  color: var(--Primary);
  text-align: right;
}
.qacard-content {
  display: flex;
padding: 10rpx 52rpx;
justify-content: center;
align-items: center;
align-self: stretch;
}
.qacard-content-text {
  color: var(--Foreground-High);
  flex:1 0 0;
}
.qacard-photo {
  display: flex;
padding: 10rpx 52rpx;
align-items: center;
gap: 20rpx;
align-self: stretch;
}
.qacard-foot {
  display: flex;
padding: 10rpx 52rpx;
align-items: center;
align-self: stretch;
}

.question {
  justify-content: space-between;
}
.answer {
  justify-content: flex-end;
}

.qacard-foot-text {
  color: var(--Foreground-Medium);
}